{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "SPC700 Assembly",
  "scopeName": "source.spc700",
  "patterns": [
    {
      "name": "comment.line.test.spc700",
      "begin": ";=",
      "end": "\n",
      "patterns": [
        {
          "name": "constant.numeric.test.spc700",
          "match": "\\b[0-9A-Fa-f]{2}\\b"
        }
      ]
    },
    {
      "name": "comment.line.semicolon.spc700",
      "match": ";.*"
    }
  ]
}
